@model PlacesToEat.Web.Areas.Regular.ViewModels.ListRegularUserEvents.ListRegularUserEventsViewModel
@{
    ViewBag.Title = "ListEvents";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ListEvents", "ListRegularUserEvents", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Filter Favourites</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Search, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Search, new { htmlAttributes = new { @class = "form-control", placeholder = "Search", id = "search" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-info" value="Filter" />
        </div>
    </div>
}

@Html.Partial("~/Views/ListEvents/_ListEventsPartial.cshtml", Model.Events)

